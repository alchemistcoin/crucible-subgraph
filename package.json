{
  "name": "crucible",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "prepare:rinkeby": "mustache config/config.rinkeby.json subgraph.template.yaml > subgraph.yaml",
    "prepare:mainnet": "mustache config/config.mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:goerli": "mustache config/config.goerli.json subgraph.template.yaml > subgraph.yaml",
    "prepare:ropsten": "mustache config/config.ropsten.json subgraph.template.yaml > subgraph.yaml",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ crucible",
    "create-local": "graph create --node http://localhost:8020/ crucible",
    "remove-local": "graph remove --node http://localhost:8020/ crucible",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 crucible"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.22.3",
    "@graphprotocol/graph-ts": "0.22.1",
    "mustache": "^4.2.0"
  }
}
